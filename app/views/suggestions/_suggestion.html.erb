<div class="d-flex justify-content-between ">
  <div class="d-flex">
      <%=image_tag suggestion.profile_pic.attached? ? suggestion.profile_pic : 'User profile.png',class: "img-thumbnail rounded-circle ",style:"width:2.5rem;"%>
        <div class="d-flex flex-column mx-3">
        <small class="fw-bold" style ="overflow:hidden;text-overflow:ellipsis;white-space:nowrap;max-width:10rem;" ><%= link_to suggestion, class: "a-decoration-none", data:{turbo: 'false'} do %><%= suggestion.username%><%end%></small>
        <small class=" text-muted" style ="font-size:.7rem;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;max-width:10rem;">
        Suggest By you by an instgram user</small>
        </div>
  </div>

    <% if current_user.waiting_followings.include?(suggestion) %>
       <%= button_to "Cancel", cancel_request_path(user_id:  user.id), method: :delete,class:"btn btn-secondary", data:{turbo: 'false'} %>
    <%end%>

</div>